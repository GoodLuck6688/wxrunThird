/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: url("http://hygs1.web.mai022.com/wxapp/img/wxrunindex.jpg") no-repeat center;
    background-size:750rpx;
    height: 600rpx;
    position: relative;
    z-index: 99;
}

.wx-run {
    /* margin-top: 60rpx; */
    font-size: 60rpx;
    color: #fff;
}

.run-step {
    text-align: center;
    position: absolute;
    top: 25%;
    left:35%;
    font-weight: 700;
}

.wx-msg {
    font-size: 30rpx;
    height:80rpx;
    /* line-height: 80rpx;     */
}

.btn-jb {
    height: 80rpx;
    line-height: 80rpx;
    width: 220rpx;
    background: #fff;
    color: #000;
    border-radius: 40rpx;
    margin-top: 40rpx;
}

.btn-cjb {
    height: 80rpx;
    line-height: 80rpx;
    width: 220rpx;
    background: #fa3232;
    color: #fff;
    border-radius: 40rpx;
    margin-top: 40rpx;
}

.content {
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    text-align: center;
    position: absolute;
    top:82%;
}

.qidai {
    color: #969696;
    font-size: 30rpx;
}

.c-left {
    width: 50%;
    border-right: 1px solid #ddd;
}

.c-right {
    width: 50%;
}

.ads {
    background: rgba(242, 242, 242, 1);
    min-height: auto;
    padding: 15rpx;
}

.ad {
    margin: 10rpx 20rpx 0;
    width: 94.5%;
    height: 330rpx;
    border-radius: 20rpx;
}

.footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    height: 110rpx;
    line-height: 110rpx;
    background: #fff;
}

.syncstep {
    width: 90%;
    height: 90rpx;
    line-height: 90rpx;
    margin: 10rpx auto;
    background: rgba(0, 204, 255, 1);
    border-radius: 60rpx;
    color: #fff;
}

.yibiaopan {
    width: 300px;
    height: 200px;
}


.t-bg {
    width: 70%;
    height: 600rpx;
    margin: 0 15%;
    border-radius: 50rpx;
    position: relative;
    display: flex;
}

.t-img {
    width: 540rpx;
    height: 600rpx;
    border-radius: 50rpx;
    margin: 0 auto;
}

.share {
    display: flex;
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    margin-bottom: 40rpx;
    left:0;
}

.sharef {
    background: linear-gradient(to right, #ff7864, #fa3232);
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    color: #fff;
    font-size: 40rpx;
    font-weight: 700;
    width: 400rpx;
    margin: 0 auto;
}
.bg-tip{
    width:60%;
    text-align: center;
    border-radius: 20rpx;
    background: #fff;
    margin: 0 auto;
    padding: 20rpx;
    font-size:34rpx
}
.bg-tip .tips{
    color:#fa3232;
}
.auth{
    background:#25C400;color:#fff;font-weigh:700;line-height:70rpx;height:70rpx;width:60%;margin-top:20rpx;font-size: 34rpx;
}
